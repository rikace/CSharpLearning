@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <h4 class="display-4">Welcome to my TODO List</h4>
    
    @if(Model.Count == 0)
    {
        <p>There are no items in the TODO List</p>
    }

    <ul>
        @foreach (var item in Model)
        {
          <li><a href="/item/edit?id=@item.Id">@item.Description</a></li>
        }
    </ul>

    <br/>
    
    <a href="/item/create">Add New Item</a>

</div>
